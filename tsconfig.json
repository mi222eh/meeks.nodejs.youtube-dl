{
    "compilerOptions": {
        "declarationDir": "dist",
        "declaration": true,
        "target": "ESNext",
        "lib": ["ESNext", "ESNext.Array", "ESNext.AsyncIterable", "ESNext.BigInt", "ESNext.Intl", "ESNext.Promise", "ESNext.String", "ESNext.Symbol"],
        "moduleResolution": "Node",
        "module": "CommonJS",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "esModuleInterop": true,
        "importHelpers": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": [
        "node_modules"
      ]
}